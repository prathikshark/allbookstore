











<style>
h1{
  margin-top:30px;
  margin-left:600px;
  color:white;
}
   .container{
    display:grid;
    gap: 20px;
   }
   .row{
    background-color:lightblue;
    height:70px;
    align-items:center;
    display:flex;
    flex-direction: column;
    justify-content:center;  
    border-radius:10px;

   }
   .r{
    font-size:20px;
   }
   .p1{
    color:white;
    font-size:20px;
   }
   .a{
    display:flex;
    flex-direction:column;
    justify-content:center;
    margin-left:44vw;
    margin-top:30px;
    
   }
   .total{
    color:white;
    font-size:25px;

   }
   .btn{
    margin-left:80px;
    margin-top:10px;
   }
</style>


<h1>YOUR BOOKS</h1>

<div  class="container">
<% if @cart_items.present? %>
<% count = 0 %>
<% @cart_items.each do |cart_item| %>
    <div class="row"> 
    <p  class="r"><%= count += 1 %></p><br>
    <p class="r"> <%= cart_item.book.id %> </p>
    <p class="r"> <%= cart_item.book.name %> </p>
    <p class="r"><%= cart_item.book.author %></p>
    <p class="r">Rs. <%= cart_item.book.price %></p>
    <%= button_to '-',decrease_cart_item_path(book_id:cart_item.id) ,method: :put %> 
    <p class="r"><%= cart_item.quantity %></p> 
    <%= button_to '+',increase_cart_item_path(book_id:cart_item.id) ,method: :put %>



  </div>
    <% end %>
    <% else %>
    <p class="p1">YOUR CART IS EMPTY :(</p>
<% end %>   
</div>

<div class="a">
<div class="total">total amount: <%= @total %> </div>
<%= button_to 'Pay',payment_index_path ,method: :get ,class: 'btn btn-primary'%>

</div>



