 
<style>
.*{
    margin:0;
    padding:0;
    box-size:content-box;
   
}

h1{
  margin-bottom:30px;
  margin-left:48vw;
  color:white;
}
.frm{
    display:flex;
    width:550px;
    margin-left:37vw;
    justify-content:center;
    # background-color:rgb(80,179,246);
    # background-color:rgb(131,182,51);
    background-color:lightblue;
    border-radius:10px;
    padding:20px;
}
form{
    display:flex;
    flex-direction:column;
    justify-content:center;
    width:500px;
   
    
}
</style>

<div class="bdy">
<h6 class="frm">
<%= form_for @bookstore, url: addBookStore_path do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Bookstore Name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Bookstore Name" %>
  </div>
  <div class="mb-3">
  <%= form.label :address, "Address" %>
  <%= form.text_field :address, class: "form-control", placeholder: "address" %>
</div>
  <div class="mb-3">
    <%= form.label :email, "Email Address" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Email Address" %>
  </div>
  <div class="mb-3">
  <%= form.label :name, "Bookstore phone" %>
  <%= form.text_field :phone, class: "form-control", placeholder: " phone" %>
</div>

<div class="mb-3">
<%= form.label :image %>
<%= form.file_field :image %>
</div>


  <%= form.submit "Add", class: "btn btn-primary" %>
<% end %>
</h6>
</div>