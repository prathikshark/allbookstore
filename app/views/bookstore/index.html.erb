
<style>
h1{
margin-left:700px;
color:white;

}
.container{
  margin-top:20px;
  justify-self:center;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  grid-gap: 20px;
}
.c{
  border-radius:7px;
  padding: 20px;
  text-align: center;

}
.image{
width:120px;
height:120px;
border-radius:5px
}
</style>

<div class="container">
<% for bookstore in @bookstores %>
<div class="c", style= 'background-color:lightblue'>
  <div class="c-body">
<%= render partial: "shared/allbookstores", locals: {bookstore:bookstore} %>
<%= button_to 'Edit' , edit_bookstore_path(bookstore), method: :get ,class: 'btn btn-success' %></br>
<%= button_to 'delete', delete_bookstore_path(bookstore), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>

</div>
</div>
<% end %>

</div>