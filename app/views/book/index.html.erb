<style>
h1{
margin-left:700px;
color:white;

}
.container{
  margin-top:20px;
  justify-self:center;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  grid-gap: 20px;
}
.c{
  border-radius:7px;
  padding: 20px;
  text-align: center;

}
.image{
width:120px;
height:120px;
border-radius:5px
}
</style>

<div class="container">
<% for book in @books %>
<div class="c", style= 'background-color:lightblue'>
  <div class="c-body">
  <%=image_tag(url_for(book.image),class:"image") if book.image.attached? %>

  <h5 class="c-title" ><%= book.id%></h5>
<h5 class="c-title"><%= book.name%></h5>
<h6 class="author"><%= book.author%></h6>
<p class="c-text"><%= book.description%></p>
<p class="c-text">Price: <%= book.price%></p>
<p class="c-text">available: <%= book.quantity%></p>
</div>
</div>
<% end %>
</div>
